# FREE VERSION - No credit card required!

# Optional: Hugging Face token for better rate limits (still FREE!)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your_token_here_optional

# MongoDB (FREE tier)
# Get from: https://www.mongodb.com/cloud/atlas
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DB_NAME=document_qa

# FREE Model Settings
# These are completely free, open-source models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Use free version
USE_FREE_VERSION=true

# Other Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=5
MAX_FILE_SIZE_MB=10
LLM_TEMPERATURE=0.1

